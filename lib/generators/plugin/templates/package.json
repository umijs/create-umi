{
  "name": "umi-plugin-<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "authors": {
    "name": "<%= author %>",
    "email": "<%= mail %>"
  },
  "repository": "<%= org %>/<%= name %>",
  "peerDependencies": {
    "umi": "2.x"
  },
<% if (useBabel) { -%>
  "main":  "lib/index.js",
  "scripts": {
    "build":  "umi-tools build",
    "prepublishOnly": "npm run build && np --no-cleanup --yolo --no-publish"
  },
  "devDependencies": {
    "umi-tools":  "*",
    "np": "^3.0.4"
  },
  "files": [
    "lib",
    "src"
  ],
<% } else { -%>
  "scripts": {
    "prepublishOnly": "np --no-cleanup --yolo --no-publish"
  },
  "devDependencies": {
    "np": "^3.0.4"
  },
  "files": [
    "index.js"
  ],
<% } -%>
  "license": "MIT"
}
