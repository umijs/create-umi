{
  "name": "umi-plugin-<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "authors": {
    "name": "<%= author %>",
    "email": "<%= mail %>"
  },
  "repository": "<%= org %>/umi-plugin-<%= name %>",
  "peerDependencies": {
    "umi": "2.x"
  },
  <% if (lang === 'with Babel') { %>
  "main":  "lib/index.js",
  "scripts": {
    "build":  "umi-tools build",
    "prepublishOnly": "npm run build && np --no-cleanup --yolo --no-publish"
  },
  "devDependencies": {
    "umi-tools":  "*",
    "np": "^3.0.4"
  },
  "files": [
    "lib",
    "src"
  ],
  <% } else if (lang === 'TypeScript') { %>
  "main":  "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build":  "umi-tools build",
    "prepublishOnly": "npm run build && np --no-cleanup --yolo --no-publish"
  },
  "devDependencies": {
    "np": "^3.0.4",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript":  "^3.2.2"
  },
  "files": [
    "lib",
    "src"
  ],
  <% } else { %>
  "scripts": {
    "prepublishOnly": "np --no-cleanup --yolo --no-publish"
  },
  "devDependencies": {
    "np": "^3.0.4"
  },
  "files": [
    "index.js"
  ],
  <% } %>
  "license": "MIT"
}
